{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make debug",
            "type": "shell",
            "command": "make",
            "args": 
            [
                "DEBUG=1",
                "PROJECTNAME=${config:proj_name}",
                "LCCFLAGS = -debug",
            ],
            "options": 
            {
                "cwd": "${workspaceFolder}",
                "shell": 
                {
                    "executable": "${config:unix_shell_path}"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make release",
            "type": "shell",
            "command": "make",
            "args": 
            [
                "DEBUG=0",
                "PROJECTNAME=${config:proj_name}",
            ],
            "options": 
            {
                "cwd": "${workspaceFolder}",
                "shell": 
                {
                    "executable": "${config:unix_shell_path}"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": 
            {
                "cwd": "${workspaceFolder}",//"\"$(wslpath -a \"${workspaceFolder}\\${config:proj_name}\")\"",
                "shell": 
                {
                    "executable": "${config:unix_shell_path}"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}